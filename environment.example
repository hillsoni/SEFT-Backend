POSTGRES_PASSWORD=change-this-secure-password
POSTGRES_DB=fitness_tracker

# PgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@fitness.com
PGADMIN_DEFAULT_PASSWORD=change-this-admin-password

# JWT Configuration (REQUIRED - Must be at least 32 characters)
JWT_SECRET_KEY=your-super-secret-jwt-key-must-be-at-least-32-characters-long
SECRET_KEY=your-flask-secret-key-must-be-at-least-32-characters-long

# Gemini AI Configuration (REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# MinIO Configuration
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=change-this-minio-secret
